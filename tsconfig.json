{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": ["ES2019.Object"],
    "sourceMap": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": ["typings/**/*.d.ts", "src"]
}
